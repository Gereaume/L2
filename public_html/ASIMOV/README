Tables :
	
	JK_EDEL_utilisateur : id, nom, prenom, login, mdp, mail, naissance, Admin
	JK_EDEL_billets : id, titre,contenu,auteur,date
	JK_EDEL_commentaires : id, id_billet, auteur, commentaire, date

